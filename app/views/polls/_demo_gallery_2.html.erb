<div class="orbit margin-bottom" role="region" aria-label="<%= answer.title %>" data-orbit data-auto-play="false">
  <a data-toggle="answer_<%= answer.id %> zoom_<%= answer.id %>" class="zoom-link hide-for-small-only">
    <span id="zoom_<%= answer.id %>" class="icon-search-plus" data-toggler="icon-search-plus icon-search-minus"></span>
    <span class="show-for-sr"><%= t("polls.show.zoom_plus") %></span>
  </a>

  <ul class="orbit-container">
    <li>
      <button class="orbit-previous">
        <span class="show-for-sr"><%= t("shared.orbit.previous_slide") %></span>&#9664;&#xFE0E;
      </button>
    </li>
    <li>
      <button class="orbit-next">
        <span class="show-for-sr"><%= t("shared.orbit.next_slide") %></span>&#9654;&#xFE0E;
      </button>
    </li>

    <li class="orbit-slide is-active is-in">
      <%= link_to "/images/square-b-1.jpg", target: "_blank" do %>
        <%= image_tag("square-b-1.jpg", class: "orbit-image") %>
      <% end %>
      <span class="orbit-caption">Square 1</span>
    </li>
    <li class="orbit-slide">
      <%= link_to "/images/square-b-2.jpg", target: "_blank" do %>
        <%= image_tag("square-b-2.jpg", class: "orbit-image") %>
      <% end %>
      <span class="orbit-caption">Square 2</span>
    </li>
    <li class="orbit-slide">
      <%= link_to "/images/square-b-3.jpg", target: "_blank" do %>
        <%= image_tag("square-b-3.jpg", class: "orbit-image") %>
      <% end %>
      <span class="orbit-caption">Square 3</span>
    </li>
  </ul>

  <nav class="orbit-bullets">
    <button class="is-active is-in" data-slide="0">
      <span class="show-for-sr">Square 1</span>
    </button>
    <button class="" data-slide="1">
      <span class="show-for-sr">Square 2</span>
    </button>
    <button class="" data-slide="2">
      <span class="show-for-sr">Square 3</span>
    </button>
  </nav>
</div>
